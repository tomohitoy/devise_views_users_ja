<h2>確認メールを再送信する</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>メールアドレス<br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "再送信" %></div>
<% end %>

